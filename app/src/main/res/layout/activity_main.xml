<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.termproject.MainActivity">

    <LinearLayout android:layout_weight="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_cose"
            android:divider="@android:color/holo_red_light"
            android:dividerHeight="1dp"
            />

        <LinearLayout
            android:id="@+id/sliding1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:visibility="gone"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="운동 자세 영상"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_margin="20dp"
                android:background="@color/colorAccent"
                android:id="@+id/exervid"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="영상 따라하기"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_margin="20dp"
                android:background="@color/colorAccent"
                android:id="@+id/followmovie"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스톱 워치"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_margin="20dp"
                android:background="@color/colorAccent"
                android:id="@+id/stopwatch"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:layout_weight="0.2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="슬라이드"
            android:id="@+id/slide"/>
        <Button android:layout_weight="0.2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="메뉴 생성"
            android:id="@+id/btn"/>
        <Button android:layout_weight="0.2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="메뉴 제거"
            android:id="@+id/btn2"/>
    </LinearLayout>


</LinearLayout>
